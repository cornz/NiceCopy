{
	"manifest_version": 2,
	"default_locale": "en",
	
	"name": "NiceCopy for Safari",
	"description": "Copy current page URL to clipboard with: Command+Shift+C",
	"version": "1.0",
	
	"icons": {
		"48": "images/icon-48.png",
		"96": "images/icon-96.png",
		"128": "images/icon-128.png",
		"256": "images/icon-256.png",
		"512": "images/icon-512.png"
	},
	
	"commands": {
		"copy-url": {
			"suggested_key": {
				"default": "Command+Shift+C"
			},
			"description": "Copy current page URL"
		}
	},
	
	"background": {
		"scripts": [ "background.js" ]
	},
	
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	
	"action": {
		"default_icon": "images/toolbar-icon.svg"
	},
	
	"permissions": [
		"tabs",
		"activeTab",
		"clipboardWrite"
	]
}
